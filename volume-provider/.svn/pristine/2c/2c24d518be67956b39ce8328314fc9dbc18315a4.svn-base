        </plugins>


    </build>


    <repositories>
        <repository>
            <id>artifactory</id>
            <name>free4lab</name>
            <url>http://maven.free4lab.com/artifactory/repo</url>
        </repository>
        <repository>
            <url>http://download.java.net/maven/2/</url>
            <id>hibernate-persistence</id>
            <layout>default</layout>
            <name>Repository for library Library[hibernate-persistence]</name>
        </repository>
        
        <repository>
            <url>http://www.libvirt.org/maven2/</url>
            <id>libvirt</id>
            <layout>default</layout>
            <name>Repository for library Library[libvirt]</name>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>artifactory</id>
            <name>qingya artifactory</name>
            <url>http://maven.free4lab.com/artifactory/plugins-releases</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>
    
    <distributionManagement>
       <repository>
           <id>free4lab</id>
           <name>Free4lab Repository</name>
           <url>http://maven.free4lab.com/artifactory/libs-snapshot-local</url>
       </repository>
    </distributionManagement>
<!--
