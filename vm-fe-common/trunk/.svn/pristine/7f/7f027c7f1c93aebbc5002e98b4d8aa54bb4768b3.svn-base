<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
    <persistence-unit name="VMC_PU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.appcloud.vm.fe.model.User</class>
        <class>com.appcloud.vm.fe.model.SnapshotBackupNum</class>
        <class>com.appcloud.vm.fe.model.VmHdEndtime</class>
        <class>com.appcloud.vm.fe.model.Billingrate</class>
        <class>com.appcloud.vm.fe.model.Appkey</class>
        <class>com.appcloud.vm.fe.model.ServiceNum</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
            <property name="hibernate.show_sql" value="false" />

            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="MYSQL@free4inno"/>
            <!--<property name="hibernate.connection.url" value="jdbc:mysql://192.168.10.5:3306/appcloud3.5_front"/>-->
            <property name="hibernate.connection.url" value="jdbc:mysql://daas.free4inno.com:6033/appcloud3.5_front"/>
             <!--以下三行华为配置 -->
            <!--<property name="hibernate.connection.username" value="root"/>-->
            <!--<property name="hibernate.connection.password" value="huaweimysql"/>-->
            <!--<property name="hibernate.connection.url" value="jdbc:mysql://192.168.1.100:6033/appcloud3.5_front"/>-->

            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
            <property name="connection.provider_class" value="org.hibernate.connection.C3P0ConnectionProvider"/>
            <property name="hibernate.c3p0.acquire_increment" value="2"/>
            <property name="hibernate.c3p0.idle_test_period" value="3000"/>
            <property name="hibernate.c3p0.max_size" value="30"/>
            <property name="hibernate.c3p0.max_statements" value="15"/>
            <property name="hibernate.c3p0.min_size" value="2"/>
            <property name="hibernate.c3p0.timeout" value="25200"/>
            <property name="hibernate.c3p0.preferredTestQuery" value="select 1;"/>
        </properties>
    </persistence-unit>
</persistence>